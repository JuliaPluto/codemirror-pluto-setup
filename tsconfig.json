{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "DOM", "WebWorker"],
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist/",
        "moduleResolution": "node"
    },
    "include": ["src/"],
    "exclude": ["dist/"]
}
